# Application
PROJECT_NAME="Clima & Negócios API"
VERSION="1.0.0"
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
POSTGRES_USER=climanegocios
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=climanegocios_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External APIs
INMET_API_KEY=your-inmet-api-key
INMET_BASE_URL=https://apitempo.inmet.gov.br
NOMADS_BASE_URL=https://nomads.ncep.noaa.gov

# ML Settings
MODEL_PATH=./models
MODEL_UPDATE_INTERVAL=24
MIN_TRAINING_SAMPLES=1000

# Email
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@climanegocios.com
EMAILS_FROM_NAME="Clima & Negócios"

# Frontend
FRONTEND_URL=http://localhost:3000

# Monitoring
SENTRY_DSN=

# PgAdmin (optional)
PGADMIN_EMAIL=admin@climanegocios.com
PGADMIN_PASSWORD=admin

# AWS (optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1